    </form>
</div>
<div class="output">
</div>

<article class="widget">
    <div class="weatherIcon"><img alt="Nuotrauka nepasiekiama" src="images/lt_transparent.png"></div>
    <div class="weatherInfo">
        <div class="temperature"><span><?php if(isset($dataByCity['forecastTimestamps'][3]['airTemperature'])){
                    echo round($dataByCity['forecastTimestamps'][3]['airTemperature']
                );}?>&deg;</span></div>
        <div class="description">
            <div class="weatherCondition"><?php if(isset($dataByCity['place']['country'])){
                    echo $dataByCity['place']['country'];
                }?></div>
            <div class="place"><?php if(isset($dataByCity['place']['code'])){
                echo $dataByCity['place']['name'];
                }?></div>
        </div>
